<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:paddingBottom="15dp"
        >

        <ImageView
            android:id="@+id/showOrderPImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:layout_marginTop="5dp"
            android:src="@drawable/baseline_add_a_photo_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/showOrderPName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:maxLines="1"
            android:text="Product Name"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/showOrderPImage"
            app:layout_constraintTop_toTopOf="@+id/showOrderPImage" />

        <TextView
            android:id="@+id/showOrderPPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="â‚¹ 4000"
            app:layout_constraintStart_toStartOf="@+id/showOrderPName"
            app:layout_constraintTop_toBottomOf="@+id/showOrderPName" />

        <TextView
            android:id="@+id/showOrderPStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="Order : Conform"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/showOrderPPrice"
            app:layout_constraintTop_toBottomOf="@+id/showOrderPPrice" />

        <TextView
            android:id="@+id/showOrderPCancelTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/google_btn_shape"
            android:paddingStart="15dp"
            android:paddingTop="5dp"
            android:paddingEnd="15dp"
            android:paddingBottom="5dp"
            android:text="Cancel"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/showOrderPImage"
            app:layout_constraintStart_toStartOf="@+id/showOrderPStatus" />

        <TextView
            android:id="@+id/showOrderPDeleteTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/delete_btn"
            android:paddingStart="15dp"
            android:paddingTop="5dp"
            android:paddingEnd="15dp"
            android:paddingBottom="5dp"
            android:text="Delete"
            android:textSize="16sp"
            android:visibility="gone"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/showOrderPImage"
            app:layout_constraintStart_toStartOf="@+id/showOrderPStatus" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>